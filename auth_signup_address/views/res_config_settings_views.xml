<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.auth.signup</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='default_user_rights']" position="after">
                <h2>Login</h2>
                <div class="row mt16 o_settings_container" id="auth_signup_address">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auth_login_with_captcha"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auth_login_with_captcha"/>
                            <div class="text-muted">Enable Captcha in Login page</div>
                        </div>
                    </div>
                </div>
                <h2>Sign up</h2>
                <div class="row mt16 o_settings_container" id="auth_signup_address">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auth_signup_with_address"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auth_signup_with_address"/>
                            <div class="text-muted">Enable Address field in Signup page</div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auth_signup_with_phone"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auth_signup_with_phone"/>
                            <div class="text-muted">Enable Phone field in Signup page</div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auth_signup_with_date_of_birth"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auth_signup_with_date_of_birth"/>
                            <div class="text-muted">Enable Date of Birth field in Signup page</div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auth_signup_with_image"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auth_signup_with_image"/>
                            <div class="text-muted">Enable Image upload in Signup page(Upcoming feature)</div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auth_signup_with_captcha"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auth_signup_with_captcha"/>
                            <div class="text-muted">Enable Captcha in Signup page</div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>