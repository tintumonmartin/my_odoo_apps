<?xml version="1.0"?>
<openerp>
    <record id="custom_upgrade_btn" model="ir.ui.view">
        <field name="name">Apps Kanban</field>
        <field name="model">ir.module.module</field>
        <field name="inherit_id" ref="base.module_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//button[last()]" position="replace">
                <style>
                    .oe_module_desc > button {
                    position: unset;
                    }
                </style>
                <button type="object" class="btn btn-warning btn-sm fa fa-upload"
                        name="button_immediate_upgrade" states="installed" string="Upgrade">Upgrade
                </button>
                <button type="object" class="btn btn-danger btn-sm fa fa-trash"
                        name="button_uninstall" states="installed" string="Uninstall">Uninstall
                </button>
                <button type="edit" class="btn btn-info btn-sm fa fa-info-circle"/>
            </xpath>
        </field>
    </record>
</openerp>
